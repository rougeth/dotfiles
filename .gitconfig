[user]
    name = Marco Rougeth
    email = marco@rougeth.com
[core]
    editor = vim
    excludesfile = ~/.gitignore
[color]
    ui = always
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[alias]
    a = add
    aa = add .
    c = commit
    cm = commit -m
    s = status
    l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)'
[push]
    default = simple
