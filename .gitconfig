[user]
    name = Marco Rougeth
    email = marco@rougeth.com
[core]
    editor = vim
    excludesfile = ~/.gitignore
[color]
    ui = always
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[alias]
    a = add
    aa = add .
    c = commit
    cm = commit -m
    d = diff
    dc = diff --cached
    l = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    s = status
[push]
    default = simple
